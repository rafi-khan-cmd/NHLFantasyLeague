# Example secrets file - DO NOT commit actual secrets
# Create actual secrets using:
# kubectl create secret generic postgres-secret --from-literal=password=yourpassword -n supplychain-digital-twin
# kubectl create secret generic snowflake-secret --from-literal=url=... --from-literal=username=... --from-literal=password=... -n supplychain-digital-twin
# kubectl create secret generic databricks-secret --from-literal=workspace-url=... --from-literal=access-token=... -n supplychain-digital-twin

apiVersion: v1
kind: Secret
metadata:
  name: postgres-secret
  namespace: supplychain-digital-twin
type: Opaque
stringData:
  password: your-postgres-password

---
apiVersion: v1
kind: Secret
metadata:
  name: snowflake-secret
  namespace: supplychain-digital-twin
type: Opaque
stringData:
  url: your-snowflake-url
  username: your-snowflake-username
  password: your-snowflake-password

---
apiVersion: v1
kind: Secret
metadata:
  name: databricks-secret
  namespace: supplychain-digital-twin
type: Opaque
stringData:
  workspace-url: https://your-workspace.cloud.databricks.com
  access-token: your-databricks-token

